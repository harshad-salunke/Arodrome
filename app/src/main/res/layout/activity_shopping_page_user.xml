<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities_shopping.shopping_page">

    <ImageView
        android:id="@+id/shopping_page_image_userActivity"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/shopping" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Item Name: "
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/shopping_page_item_name_userActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="2dp"
            android:text="Item name"
            android:textSize="20dp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: "
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:textSize="22dp"/>


        <TextView
            android:id="@+id/shopping_page_size_userActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size"
            android:layout_gravity="bottom"
            android:textSize="20dp" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:textSize="22dp"/>



        <TextView
            android:id="@+id/shopping_page_description_userActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_gravity="bottom"
            android:textSize="20dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Stock: "
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:textSize="22dp"/>


        <TextView
            android:id="@+id/shopping_page_stock_userActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In stock:"
            android:layout_gravity="bottom"
            android:textSize="20dp" />



    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: "
            android:layout_gravity="bottom"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:gravity="bottom"
            android:textSize="22dp"/>



        <TextView
            android:id="@+id/shopping_page_price_userActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Price: â‚¹"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>