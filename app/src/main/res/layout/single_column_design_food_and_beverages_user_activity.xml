<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:gravity="center">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:id="@+id/gridImage_food_and_beverage_userActivity"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:src="@drawable/beverage"
        />

    <TextView
        android:id="@+id/shop_item_Name_gridView_food_and_beverage_userActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="Burger"
        android:layout_gravity="left"
        android:textSize="25sp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/shop_item_description_gridView_food_and_beverages_userActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This burger is made up of whole wheat"
        android:textSize="25sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"

        android:layout_gravity="left"/>

    <TextView
        android:id="@+id/price_gridView_food_and_beverages_userActivity"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Price: â‚¹"
        android:textStyle="bold"
        android:layout_gravity="left"/>




</LinearLayout>