<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius= "5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <ImageView
            android:id="@+id/shopping_userActivity_listView_image1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/shopping" />


        <TextView
            android:id="@+id/shopName_userActivity_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/shopping_userActivity_listView_image1"
            android:gravity="center_vertical"
            android:text="Raymond"
            android:textColor="#000"
            android:textSize="25dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/shopDescription_userActivity_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/shopping_userActivity_listView_image1"
            android:layout_below="@id/shopName_userActivity_listView"
            android:text="Descirption"
            android:textSize="20dp"/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>